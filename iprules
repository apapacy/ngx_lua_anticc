iptables -A INPUT -p tcp -m tcp --dport 80 -m state --state NEW -m hashlimit --hashlimit 256/s --hashlimit-burst 32 --hashlimit-mode srcip --hashlimit-name HTTP --hashlimit-htable-expire 10000 -j ACCEPT
iptables -A INPUT -p tcp -m tcp --dport 80 -m state --state NEW -j REJECT --reject-with tcp-reset
iptables -A INPUT -p tcp -m tcp --dport 443 -m state --state NEW -m hashlimit --hashlimit 256/s --hashlimit-burst 32 --hashlimit-mode srcip --hashlimit-name HTTP --hashlimit-htable-expire 10000 -j ACCEPT
iptables -A INPUT -p tcp -m tcp --dport 443 -m state --state NEW -j REJECT --reject-with tcp-reset


